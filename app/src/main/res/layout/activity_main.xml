<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="416dp"
        android:layout_height="110dp"
        android:background="@drawable/radiusbuttontop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="414dp"
            android:layout_height="43dp"
            android:layout_marginTop="35dp"
            android:text="Selamat Datang di Eldest E-bike"
            android:textAlignment="center"
            android:textColor="#FEFEFE"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framepencatatan"
        android:layout_width="336dp"
        android:layout_height="131dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_gravity="bottom"
            android:background="@drawable/radiusbutton1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:text="Pencatatan"
                android:textSize="30dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/imageView6"
            android:layout_width="91dp"
            android:layout_height="93dp"
            android:layout_gravity="center|top"
            android:background="@drawable/radiusbulat">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="61dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pencatatan" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framepengembalian"
        android:layout_width="336dp"
        android:layout_height="131dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/framepencatatan">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_gravity="bottom"
            android:background="@drawable/radiusbutton1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:text="Pengembalian"
                android:textSize="30dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/imageView6"
            android:layout_width="91dp"
            android:layout_height="93dp"
            android:layout_gravity="center|top"
            android:background="@drawable/radiusbulat">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pembayaran" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framestok"
        android:layout_width="334dp"
        android:layout_height="134dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/framepengembalian">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_gravity="bottom"
            android:background="@drawable/radiusbutton1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:text="Stok"
                android:textSize="30dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/imageView6"
            android:layout_width="91dp"
            android:layout_height="93dp"
            android:layout_gravity="center|top"
            android:background="@drawable/radiusbulat">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/sepedalogo" />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelainnya"
        android:layout_width="336dp"
        android:layout_height="131dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_gravity="bottom"
            android:background="@drawable/radiusbutton1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="10dp"
                android:text="Lainnya"
                android:textSize="30dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/imageView6"
            android:layout_width="91dp"
            android:layout_height="93dp"
            android:layout_gravity="center|top"
            android:background="@drawable/radiusbulat">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/lainnya" />
        </FrameLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>